<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.springproj.mappers.messageMapper">
  
  <insert id="sendMsg">
  	insert into message(sender, receiver, messageText) value(#{sender},#{receiver},#{messageText})
  </insert>
  
  <select id="getMsgCnt" resultType="int">
  	select count(*) from message where receiver = #{userId} and isRead = 'N'
  </select>
  
  </mapper>